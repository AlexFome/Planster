<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CheckBox" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/light_grey_2</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/red</item> <!-- activated color change as you wish -->
        <item name="android:textColor">@color/white</item> <!-- checkbox text color -->
    </style>

</resources>
